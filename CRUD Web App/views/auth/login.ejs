<%- include("../partials/head.ejs", {page: "Login"}) %>
<%- include("../partials/header.ejs") %>


<div class="container px-4 text-center">
    <div class="row gx-5">
        <div class="login-wrap col-4 w-auto align-items-center">
            <% if (errorMessage) { %>
                <div class="alert alert-danger" role="alert">
                    <%= errorMessage %> 
                  </div>
            <% } %>
            <h2>Log in</h2>
            <form action="/login" method="post">
                <div class="mb-3">
                    <label for="username" class="form-label">Email</label>
                    <input name="username" type="text" class="form-control" id="username" required>
                </div>
                <div class="mb-3 password-container">
                    <label for="current-password" class="form-label">Password</label>
                    <input id="current-password" name="password" type="password" class="form-control" required>
                    <i class="fa-solid fa-eye toggle-password"></i>
                </div>
                <button type="submit" class="btn btn-primary">Log in</button>
            </form>
        </div>
    </div>
</div>

